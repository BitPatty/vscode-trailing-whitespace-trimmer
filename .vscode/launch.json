{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Web Extension ",
			"type": "extensionHost",
			"debugWebWorkerHost": true,
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionDevelopmentKind=web"
			],
			"outFiles": [
				"${workspaceFolder}/dist/web/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		}
	]
}